<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <form class="card card-body bg-dark text-white p-5" action="/signup" method="POST">
        <h3 class="text-center fw-bold mb-4">Registrarse</h3>

        <label for="fullname">Nombre:</label>
        <input type="type" name="fullname" placeholder="Tu Nombre" class="form-control mb-3" autofocus />

        <label for="username">Ingrese correo:</label>
        <input type="email" name="email" placeholder="Tu Email" class="form-control mb-3" />

        <label for="password">Ingrese contraseña:</label>
        <input type="password" name="password1" placeholder="Contraseña" class="form-control mb-3" />

        {{!-- Confirm your password --}}
        <label for="password">Repetir contraseña:</label>
        <input type="password" name="password2" placeholder="Repetir contraseña" class="form-control mb-3" />

        <button class="btn btn-success btn-block">
          Registrar
        </button>
    </div>
    </form>

    {{! Link }}
    <p class="fs-5 text-center mt-3">¿Tienes una cuenta?
      <a href="/signin" class="text-info">Ingresar</a>
    </p>
  </div>
</div>