<div class="container p-4">
  <div class="row">

    <div class="col-md-4 mx-auto">
      <form action="/signin" method="POST" class="card card bg-dark text-white p-4">

        <h3 class="text-center my-3">Ingresar</h3>

        <div class="card-body">

          {{!-- Email --}}
          <label for="username" class="fw-light fs-6 mb-2">Ingrese correo:</label>
          <input type="text" name="email" placeholder="tuemail@mail.com" class="form-control mb-3" autofocus />

          <label for="password">Ingrese contraseña:</label>
          <div class="form-group">
            <input type="password" name="password" placeholder="Contraseña" class="form-control mb-3" />
          </div>
          <button class="btn btn-primary btn-block">
            Ingresar
          </button>

        </div>
      </form>

      {{! Link }}
      <p class="fs-5 text-center mt-3 text-dark">No tienes una cuenta?
        <a href="/signup" class="text-info">Registraste</a>
      </p>

    </div>
  </div>
</div>