<div class="container py-5">
    <div class="row">
        <div class="col-md-12">
                    <div class="card card-outline-secondary">
                        <div class="card-header">
                            <h3 class="mb-0">Añadir archivo</h3>
                        </div>
                        <div class="card-body">
                            <form class="form" action="/archivos/add" method="POST" enctype="multipart/form-data">
                                <div class="form-group row">
                                    <label class="col-lg-3 col-form-label form-control-label">Archivo</label>
                                    <div class="col-lg-9">
                                      <input type="file" name="nombre_archivo" class="form-control" placeholder="Link de archivo" autofocus>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-3 col-form-label form-control-label">Cliente</label>
                                    <div class="col-lg-9">
                                        <select type="rom_select" name="rom_select" class="form-control">
                                            {{#each roms}}
                                            <option value="{{id_rom}}">{{nom_rom}}</option>
                                            {{/each}}
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-3 col-form-label form-control-label">Categoria</label>
                                    <div class="col-lg-9">
                                        <select type="categoria" name="categoria" class="form-control">
                                            <option value="Informes">Informes</option>
                                            <option value="Instructivos">Instructivos</option>
                                            <option value="Checklist">Checklist</option>
                                            <option value="Proyectos">Proyectos</option>
                                            <option value="Operativos">Operativos</option>
                                            <option value="Mantencion">Mantencion</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-lg-3 col-form-label form-control-label">Descripción</label>
                                    <div class="col-lg-9">
                                        <input type="descripcion" name="descripcion" class="form-control" placeholder="Descripcion">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <button class="btn btn-success btn-block">
                                        Guardar
                                    </button>
                                </div>

                            </form>
                        </div>
                    </div>
                    <!-- /form user info -->
</div>                    
</div>    
</div>    





